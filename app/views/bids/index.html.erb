<h1>Listing bids</h1>

<table>
  <tr>
    <th>Price</th>
    <th>User</th>
    <th>Swarm request</th>
    <th>boolean value of auction_closed</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bids.each do |bid| %>
  <tr>
    <td><%= bid.price %></td>
    <td><%= bid.user.username %></td>
    <td><%= bid.swarm_request.item %></td>
    <td><%= bid.swarm_request.auction_closed %></td>
    <%# TODO: delete this comment.  This is a nested route.  So it needs and :id and a :swarm_request_id.  So we have to pass both: %>
    <td><%= link_to 'Show', swarm_request_bid_path(:id => bid.to_param, :swarm_request_id => @swarm_request.to_param) %></td>
    <td><%= link_to 'Edit', edit_swarm_request_bid_path(:id => bid.to_param, :swarm_request_id => @swarm_request.to_param) %></td>
    <td><%= link_to 'Destroy', swarm_request_bid_path(:id => bid.to_param, :swarm_request_id => @swarm_request.to_param), :confirm => 'Are you sure?', :method => :delete %></td>
    
    <td><%= button_to 'Accept Bid', accept_swarm_request_bid_path(:id => bid.to_param, :swarm_request_id => @swarm_request.to_param), :method => :put %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Bid', new_swarm_request_bid_path(:swarm_request_id => @swarm_request.to_param) %>
