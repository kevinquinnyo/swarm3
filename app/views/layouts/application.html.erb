<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="initial-scale=1.0, user-scalable=no" />
    <title><%= title %></title>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults %>
    <%= ajaxful_rating_style %>
    <script type="text/javascript"
        src="http://maps.google.com/maps/api/js?sensor=false&region=US;key=ABQIAAAA3o0gpoxhBa8wt07axEnPEhSFtz6H3hWtsjLlk5R7ntmycOL6mhTPErQqRhAO8dr_JO8U3PVJSClDqg">
    </script>
    <%= csrf_meta_tag %>
    <link rel="icon" href="images/favicon.ico" type="image/ico" />  
  </head>
  <% if @body_onload %>
    <body onload="<%= @body_onload %>">
  <% else %>
    <body>
  <% end %>
      <!-- feedback via uservoice -->
      <script type="text/javascript">
        (function() {
          var uv = document.createElement('script'); uv.type = 'text/javascript'; uv.async = true;
          uv.src = ('https:' == document.location.protocol ? 'https://' : 'http://') + 'widget.uservoice.com/cjDA6pejZZ17CYsLDH0arA.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(uv, s);
        })();
      </script>

      <%= render 'layouts/fullwidth' %>
      <div id= "container" class= "container_12">
          <div class="grid_12">
            <%= yield :top_div %>
          </div>
          <div id="content" class="grid_6 roundcontent">
            <%= yield :left_div %>
          </div>
          <div class= "grid_6">
            <%= yield :right_div %>
          </div>
          <%= yield %>
      </div>
    </body>
</html>
