<%= form_for(@swarm_request) do |f| %>
  <% if @swarm_request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@swarm_request.errors.count, "error") %> prohibited this swarm_request from being saved:</h2>

      <ul>
      <% @swarm_request.errors.full_messages.each do |msg| %>
