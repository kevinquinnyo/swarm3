    <span style="font-size: 10px">Consider the cost of the item plus a reasonable delivery fee</span>
  </div>
  <div class="field">
    <%= f.label :delivery_instructions, "Delivery Instructions (gate code, call when you arrive, etc.)" %><br />
    <%= f.text_field :delivery_instructions %>
  </div>
  <div class="actions">
    <%= f.submit "Place Request Now!" %>
  </div>
